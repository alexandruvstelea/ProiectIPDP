<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateAppointmentActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Select date"
        android:textColor="#E91E63"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Select hour"
        android:textColor="#E91E63"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/hourSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleText"
        app:layout_constraintVertical_bias="0.974" />

    <Spinner
        android:id="@+id/hourSpinner"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:entries="@array/hours"
        android:fontFamily="@font/audiowide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.782" />

    <Spinner
        android:id="@+id/barberSpinner"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:fontFamily="@font/audiowide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <Spinner
        android:id="@+id/shopSpinner"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:fontFamily="@font/audiowide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255" />

    <TextView
        android:id="@+id/scheduleText"
        android:layout_width="404dp"
        android:layout_height="65dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Schedule an appointment"
        android:textAlignment="center"
        android:textColor="#E91E63"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="138dp"
        android:layout_height="38dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Select shop"
        android:textColor="#E91E63"
        app:layout_constraintBottom_toTopOf="@+id/shopSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleText"
        app:layout_constraintVertical_bias="0.576" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Select barber"
        android:textColor="#E91E63"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/barberSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleText"
        app:layout_constraintVertical_bias="0.931" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="153dp"
        android:layout_height="45dp"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="Select date"
        android:textColor="#E91E63"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/scheduleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:fontFamily="@font/audiowide"
        android:text="Schedule appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourSpinner"
        app:layout_constraintVertical_bias="0.311" />

    <Button
        android:id="@+id/datePickButton"
        style="?android:spinnerStyle"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/audiowide"
        android:text="18/Jan/2001"
        android:onClick="openDatePicker"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

</androidx.constraintlayout.widget.ConstraintLayout>